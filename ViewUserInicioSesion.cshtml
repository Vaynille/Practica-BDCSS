@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Biblioteca Nacional</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/Content/Estilos.css" />
</head>
<body>
    <a href="~/Main/ViewMain"><div class="banner"></div> </a>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
           </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="#">Libros Populares <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">Catalogo en Linea</a></li>
                    <li><a href="#">Conctacto</a></li>
                </ul>

            </div><!-- /.navbar-collapse -->


        </div><!-- /.container-fluid -->
    </nav>

    @RenderBody()

    @if (ViewBag.ShowFooter != false)
    {
        <footer class="Divfooter ">
            <p>
                Si necesitas ponerte en contacto con los creadores de
                esta página, o si quieres ofrecerte como voluntario
                para traducirla, puedes enviar un correo electrónico
                a info [] occupyflash.org - o mencionarnos en
                Twitter OccupyFlash
            </p>


        </footer>
    }


</body>
</html>
