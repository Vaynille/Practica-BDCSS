
@{
    ViewBag.Title = "ViewRegistrarUser";
    Layout = "~/Views/Shared/Inicio.cshtml";
}

<h2>REGISTRO DE USUARIOS</h2>

<h4>
    Usuario registrado: @ViewBag.message
</h4>


@using (Html.BeginForm("ViewRegistrarUser", "RegistrarUser"))
{
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="well well-sm">
                    <form class="form-horizontal" method="post">
                        <fieldset>
                            <legend class="text-center header">Contact us</legend>

                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-triangle-top" aria-hidden="true"></span>
                                <div class="col-md-8">
                                    <input id="Nombre" required name="Nombre" type="text" placeholder="Usuario" class="form-control">
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-triangle-top" aria-hidden="true"></span>
                                <div class="col-md-8">
                                    <input id="Email" required name="Email" type="email" placeholder="Email Address" class="form-control">
                                    <button type="button" id="verificar" class="btn-warning">Verificar</button>
                                </div>
                             
                            </div>

                            <div class="form-group">
                                <span class="col-md-1 col-md-offset-2 text-center glyphicon glyphicon-triangle-top" aria-hidden="true"></span>
                                <div class="col-md-8">
                                    <input maxlength="5" id="Password" required name="Password" type="password" placeholder="Contraseña" class="form-control">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <button  id="enviar" name="enviar" type="submit" class="btn btn-primary btn-lg" >Registrar</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
}

@section scripts{
    <script src="~/Scripts/ValidacionDeEmail.js"></script>
}